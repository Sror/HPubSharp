<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HPubSharp.BookShelfPage">
	<ContentPage.Padding>
	    <OnPlatform x:TypeArguments="Thickness"
	                iOS="0, 20, 0, 0" />
    </ContentPage.Padding>
	<ContentPage.Content>
		<Grid x:Name="MainGrid" VerticalOptions="FillAndExpand">
		    <Grid.RowDefinitions>
			      <RowDefinition Height="Auto" />
		    </Grid.RowDefinitions>

		    <Grid.ColumnDefinitions>
			      <ColumnDefinition Width="25*" />
			      <ColumnDefinition Width="25*" />
			      <ColumnDefinition Width="25*" />
			      <ColumnDefinition Width="25*" />
		    </Grid.ColumnDefinitions>

		    <BoxView Color="White"
             HeightRequest="0"
             Grid.Row="0" Grid.Column="0"  Grid.ColumnSpan="4" />
             <StackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4">
	              <Label Text=" " 
	             		VerticalOptions="Center"
	             		HorizontalOptions="Center"
	             		Font="Large" />
	             <Image Source="Mistery_stub.png" 
	             		VerticalOptions="Center"
	             		HorizontalOptions="Center"/>
	             <Label Text="hPub Sharp" 
	             		VerticalOptions="Center"
	             		HorizontalOptions="Center"
	             		Font="Large" />
             </StackLayout>
		</Grid>
	</ContentPage.Content>
</ContentPage>
